<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zfr.course.member.dao.UserMapper">
    <resultMap id="UserResultMap" type="com.zfr.course.member.model.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
    </resultMap>
    <!--根据id查询-->
    <select id="findUserById" parameterType="Integer" resultMap="UserResultMap">
        select * from  USER where id = #{id}
    </select>
    <!--添加用户-->
    <insert id="addUser" parameterType="com.zfr.course.member.model.User">
          insert into USER(name,sex,email) values (#{name},#{sex},#{email})

      </insert>

    <select id="findAllUsers" resultMap="UserResultMap">
        select * from USER
   </select>
    <!--更新用户信息-->
    <update id="editUser" parameterType="com.zfr.course.member.model.User">
       update user set
       name = #{name},sex = #{sex},email = #{email}
       where id = #{id}
   </update>
    <!--删除用户-->
    <delete id="deleteUser" parameterType="Integer">
        delete from USER
        where id = #{id}
    </delete>
</mapper>
